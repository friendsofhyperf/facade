{
    "name": "friendsofhyperf/facade",
    "description": "Facades for hyperf.",
    "type": "library",
    "require": {
        "hyperf/di": "~2.2.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "hyperf/amqp": "~2.2.0",
        "hyperf/async-queue": "~2.2.0",
        "hyperf/cache": "~2.2.0",
        "hyperf/config": "~2.2.0",
        "hyperf/filesystem": "~2.2.0",
        "hyperf/framework": "~2.2.0",
        "hyperf/kafka": "~2.2.0",
        "hyperf/logger": "~2.2.0",
        "hyperf/redis": "~2.2.0",
        "hyperf/session": "~2.2.0",
        "hyperf/translation": "~2.2.0",
        "hyperf/validation": "~2.2.0",
        "hyperf/view": "~2.2.0",
        "mockery/mockery": "^1.0",
        "phpstan/phpstan": "^0.12",
        "phpunit/phpunit": "^9.5",
        "swoole/ide-helper": "^4.6"
    },
    "autoload": {
        "files": [
        ],
        "psr-4": {
            "FriendsOfHyperf\\Facade\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "FriendsOfHyperf\\Facade\\Tests\\": "tests/"
        }
    },
    "extra": {
        "hyperf": {
            "config": "FriendsOfHyperf\\Facade\\ConfigProvider"
        }
    },
    "config": {
        "sort-packages": true
    },
    "license": "MIT",
    "authors": [{
        "name": "huangdijia",
        "email": "huangdijia@gmail.com"
    }],
    "scripts": {
        "analyse": "phpstan analyse --memory-limit 300M -l 0 -c phpstan.neon ./src",
        "cs-fix": "php-cs-fixer fix $1",
        "test": "phpunit -c phpunit.xml --colors=always"
    }
}
